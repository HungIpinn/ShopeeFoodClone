{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",          // root project
    "paths": {
      "src/*": ["src/*"],    // alias cho thư mục src
      "components/*": ["src/components/*"],  // alias cho components
      "react-native-vector-icons/*": ["./declarations.d.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"]
}